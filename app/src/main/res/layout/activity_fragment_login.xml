<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7B840"
    android:orientation="vertical"
    tools:context="com.ipati.dev.brochure.fragment.FragmentLogin">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/im_logo_login"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:src="@mipmap/logo_3x" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:weightSum="2.6">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:text="Login to your account"
            android:textColor="#fff"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/ed_account"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_weight="0.2"
            android:background="@drawable/background_ed"
            android:gravity="center"
            android:hint="กรุณาใส่รหัส 4 หลัก"
            android:inputType="number"
            android:maxLength="4"
            android:maxLines="1" />

        <Button
            android:id="@+id/bt_login"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="20dp"
            android:layout_weight="0.2"
            android:background="@drawable/background_bt"
            android:text="Login"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="bottom|center_horizontal"
            android:text="Version V.1.1"
            android:textColor="#000"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>
